{% verbatim %}

<!-- Folder thumb -->
<script type="text/template" id="folders-thumb">
	<div class="folder" ng-click="loadFolder(folder.id); update()">{{ folder.name }}</div>
</script>


<!-- Holds add folder form -->
<script type="text/template" id="folders-windows-add">
	<form method="post"  name="addForm" ng-submit="save.submit(addForm, $event)">
		<h1>Добавить альбом в {{ current.name }} </h1>
		<smart-label type="text" title="Имя" ng-model="name" required></smart-label>
		<smart-button type="submit">Создать</smart-button>
	</form>
</script>


{% endverbatim %}