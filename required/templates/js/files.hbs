{% verbatim %}

<!-- File thumb -->
<script type="text/template" id="files-thumb">
	<div class="file"">
		<div class="meta">
			{{ name }}
		</div>
		<img src="../files/thumbs/{{ thumb }}" />
	</div>
</script>


<!-- Holds add files form -->
<script type="text/template" id="files-windows-add">
	<form method="post" name="addForm" id="addFilesForm">
		<input type="hidden" name="folderId" value="{{ folderId }}" />
		<h1>Загрузить в альбом {{ name }} </h1>
		<smart-label name="files" type="file" title="Выберите файл(ы)" multiple="multiple" required></smart-label>
		<smart-button type="submit">Загрузить</smart-button>
		<div class="progress" style="clear:both; display: none">
			Осталось файлов <span class="toProceed">0</span>/<span class="total">0</span>
		</div>
	</form>
</script>


<!-- Holds file info form -->
<script type="text/template" id="files-windows-file">
	{{#if video}}
	<video src="../files/files/{{ location }}" autoplay="autoplay" class="photo"></video>
	{{/if}}
	{{#if image}}
	<img src="../files/files/{{ location }}" style="max-width: 100%" class="photo" />
	{{/if}}
</script>


{% endverbatim %}